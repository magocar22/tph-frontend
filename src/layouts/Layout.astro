---
// src/layouts/Layout.astro
import BaseHead from '../components/BaseHead.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';

interface Props {
	title: string;
	description: string;
    image?: string;
    jsonLd?: Record<string, any>;
    navbarTransparent?: boolean;
    showNavbar?: boolean; 
    type?: 'website' | 'article';
    publishDate?: string;
    author?: string;
}

const { 
    title, 
    description, 
    image, 
    jsonLd,
    navbarTransparent = false, 
    showNavbar = true,
    type,
    publishDate,
    author
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<BaseHead 
            title={title} 
            description={description} 
            image={image} 
            jsonLd={jsonLd}
            type={type}
            publishDate={publishDate}
            author={author}
        />
	</head>
	<body class="font-sans text-gray-800 antialiased flex flex-col min-h-screen">
        
        <!-- Enlace de accesibilidad -->
        <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-blue-600 text-white p-2 z-50 rounded">
            Saltar al contenido principal
        </a>

        {showNavbar && <Navbar isTransparent={navbarTransparent} />}

		<main id="main-content" class="flex-grow">
			<slot />
		</main>

        <Footer />
        <CookieBanner />
	</body>
</html>