---
// src/components/Inversion.astro

// 1. IMPORTANTE: Importamos el componente optimizado de Astro
import { Image } from 'astro:assets';

// 2. Importamos las imágenes reales desde la carpeta assets
import imgModelo from '../assets/modelo-optimizado.jpg';
import imgDemanda from '../assets/demanda-real.jpg';
import imgPlusvalia from '../assets/plusvalia.jpg';

const tarjetas = [
  {
    titulo: "Modelo optimizado",
    desc1: "Rentabilidad desde el alquiler, salida planificada mediante opción de compra. Equilibrio entre liquidez, riesgo y estabilidad.",
    desc2: "Ideal para inversores que buscan ingresos recurrentes desde el inicio sin renunciar a una plusvalía protegida y escalabilidad.",
    imagen: imgModelo, 
    destacado: false
  },
  {
    titulo: "Demanda real",
    desc1: "Jóvenes con perfil estable que no pueden acceder a hipoteca pero desean comprar. Alta ocupación y bajo riesgo.",
    desc2: "Este perfil garantiza estabilidad en el retorno. Alta ocupación, bajo impago y fidelización natural por necesidad real.",
    imagen: imgDemanda,
    destacado: true 
  },
  {
    titulo: "Plusvalía protegida",
    desc1: "El precio de recompra se define desde el inicio, garantizando beneficios sin incertidumbre ni burbujas especulativas.",
    desc2: "Este modelo te permite planificar la salida desde el inicio. Aporta control total sobre tus márgenes y un retorno sin sorpresas.",
    imagen: imgPlusvalia, 
    destacado: false
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-blue-600 mb-4">
        Un modelo de inversión rentable, social y escalable
      </h2>
      <p class="text-gray-600 text-lg max-w-3xl mx-auto">
        Combina ingresos estables por alquiler + plusvalía futura con un propósito social claro.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      {tarjetas.map((item) => (
        <article class={`
          rounded-2xl overflow-hidden shadow-lg flex flex-col h-full
          transition-transform duration-300 hover:-translate-y-2 hover:shadow-2xl
          ${item.destacado ? 'bg-blue-600 text-white' : 'bg-white text-gray-700'}
        `}>
          
          <!-- IMAGEN SUPERIOR -->
          <div class="h-56 overflow-hidden relative">

            <Image 
              src={item.imagen} 
              alt={item.titulo} 
              width={600} 
              class="w-full h-full object-cover transition-transform duration-500"
            />
          </div>

          <div class="p-8 flex-1 flex flex-col">
            <h3 class={`text-2xl font-bold mb-6 ${item.destacado ? 'text-white' : 'text-blue-600'}`}>
              {item.titulo}
            </h3>
            
            <p class="mb-4 leading-relaxed">
              {item.desc1}
            </p>
            
            <p class="leading-relaxed font-medium">
              {item.desc2}
            </p>
          </div>

        </article>
      ))}

    </div>
  </div>
</section>