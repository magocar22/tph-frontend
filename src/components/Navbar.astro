---
import logoBlanco from '../assets/tph-logo-blanco.png';

interface Props {
  isTransparent?: boolean;
}

const { isTransparent = false } = Astro.props;

const links = [
  { name: 'Inicio', url: '/' },
  { name: 'El Modelo', url: '/modelo' },
  { name: 'Proyectos', url: '/proyectos' },
  { name: 'Invertir', url: '/invertir' },
  { name: 'Accionistas', url: '/accionistas' },
  { name: 'Actualidad', url: '/blog' },
];
---

<nav 
  id="main-navbar" 
  class:list={[
    "fixed top-0 w-full z-50 transition-all duration-300",
    isTransparent 
      ? "bg-transparent py-6" 
      : "bg-white py-4 shadow-md"
  ]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center">
      
      <!-- LOGO -->
      <a href="/" class="flex items-center relative z-50" aria-label="Volver al inicio">
        <div id="logo-container" class:list={[
                "transition-all duration-300",
                !isTransparent ? "logo-blue" : "" 
            ]}>
             <div 
                id="logo-mask"
                class="w-48 md:w-64 h-14 md:h-20"
                style={`--logo-url: url('${logoBlanco.src}')`}
             ></div>
        </div>
      </a>

      <!-- MENÚ ESCRITORIO -->
      <div class="hidden xl:flex items-center space-x-8">
        {links.map(link => (
          <a 
            href={link.url} 
            class:list={[
              "nav-link text-sm font-medium transition-colors hover:text-blue-400",
              isTransparent ? "text-white" : "text-gray-600 hover:text-blue-600"
            ]}
          >
            {link.name}
          </a>
        ))}

        <!-- BOTÓN ÁREA PRIVADA (Renombrado) -->
        <a 
            id="btn-inversores"
            href="/inversores" 
            class:list={[
                "text-sm font-medium px-4 py-2 rounded-full border transition-all flex items-center gap-2",
                isTransparent 
                    ? "border-white text-white hover:bg-white hover:text-blue-900" 
                    : "border-blue-600 text-blue-600 hover:bg-blue-50"
            ]}
        >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
            Área Privada
        </a>

        <a 
            href="/contacto" 
            class="bg-blue-600 text-white text-sm font-bold px-5 py-2.5 rounded-full hover:bg-blue-700 transition-transform hover:-translate-y-0.5 shadow-lg"
        >
            Contactar
        </a>
      </div>

      <!-- BOTÓN HAMBURGUESA -->
      <div class="xl:hidden flex items-center relative z-50">
        <button id="mobile-menu-btn" class:list={["focus:outline-none transition-colors p-2", isTransparent ? "text-white" : "text-gray-800"]}>
          <svg id="icon-menu" class="w-8 h-8 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg id="icon-close" class="hidden w-8 h-8 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

    </div>
  </div>

  <!-- MENÚ MÓVIL -->
  <div id="mobile-menu" class="hidden xl:hidden fixed inset-0 bg-blue-600 z-40 transition-opacity duration-300 opacity-0 pointer-events-none">
    <div class="flex flex-col items-center justify-center h-full space-y-8 p-6">
      {links.map(link => (
        <a href={link.url} class="text-white font-bold text-2xl hover:text-blue-200 transition-colors">
          {link.name}
        </a>
      ))}
      <hr class="w-16 border-blue-400 opacity-50" />
      <a href="/inversores" class="text-blue-100 font-medium text-lg flex items-center hover:text-white transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
        Área Privada
      </a>
      <a href="/contacto" class="w-full max-w-xs bg-white text-blue-600 text-center font-bold text-lg py-4 rounded-2xl hover:bg-blue-50 shadow-xl transform active:scale-95 transition-all">
        Contactar ahora
      </a>
    </div>
  </div>

</nav>

<style>
  #logo-mask {
    background-color: white;
    mask-image: var(--logo-url);
    -webkit-mask-image: var(--logo-url);
    mask-size: contain;
    -webkit-mask-size: contain;
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
    mask-position: center;
    -webkit-mask-position: center;
    transition: background-color 0.3s ease;
  }
  .logo-blue #logo-mask {
    background-color: #2563EB !important;
  }
  .menu-open {
    opacity: 1 !important;
    pointer-events: auto !important;
  }
</style>

<script is:inline define:vars={{ isTransparent }}>
  // ... (El script de scroll se mantiene IGUAL que el anterior, no hace falta cambiarlo) ...
  // Si copias el archivo, asegúrate de mantener el script que tenías
  const navbar = document.getElementById('main-navbar');
  const logoContainer = document.getElementById('logo-container');
  const navLinks = document.querySelectorAll('.nav-link');
  const btnInversores = document.getElementById('btn-inversores');
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const iconMenu = document.getElementById('icon-menu');
  const iconClose = document.getElementById('icon-close');
  const menuMobile = document.getElementById('mobile-menu');

  window.addEventListener('scroll', () => {
    if (menuMobile.classList.contains('menu-open')) return;
    if (!isTransparent) return;

    if (window.scrollY > 50) {
      applyScrolledStyles();
    } else {
      applyTransparentStyles();
    }
  });

  function applyScrolledStyles() {
      navbar.classList.add('bg-white', 'shadow-md', 'py-4');
      navbar.classList.remove('bg-transparent', 'py-6');
      logoContainer.classList.add('logo-blue'); 
      navLinks.forEach(l => { l.classList.remove('text-white'); l.classList.add('text-gray-600'); });
      btnInversores.classList.remove('border-white', 'text-white', 'hover:bg-white', 'hover:text-blue-900');
      btnInversores.classList.add('border-blue-600', 'text-blue-600', 'hover:bg-blue-50');
      mobileBtn.classList.remove('text-white');
      mobileBtn.classList.add('text-gray-800');
  }

  function applyTransparentStyles() {
      navbar.classList.add('bg-transparent', 'py-6');
      navbar.classList.remove('bg-white', 'shadow-md', 'py-4');
      logoContainer.classList.remove('logo-blue');
      navLinks.forEach(l => { l.classList.add('text-white'); l.classList.remove('text-gray-600'); });
      btnInversores.classList.add('border-white', 'text-white', 'hover:bg-white', 'hover:text-blue-900');
      btnInversores.classList.remove('border-blue-600', 'text-blue-600', 'hover:bg-blue-50');
      mobileBtn.classList.add('text-white');
      mobileBtn.classList.remove('text-gray-800');
  }

  mobileBtn.addEventListener('click', () => {
    const isOpen = menuMobile.classList.contains('menu-open');
    if (!isOpen) {
        menuMobile.classList.remove('hidden');
        setTimeout(() => menuMobile.classList.add('menu-open'), 10);
        iconMenu.classList.add('hidden');
        iconClose.classList.remove('hidden');
        logoContainer.classList.remove('logo-blue'); 
        mobileBtn.classList.remove('text-gray-800');
        mobileBtn.classList.add('text-white');
        document.body.style.overflow = 'hidden';
    } else {
        menuMobile.classList.remove('menu-open');
        setTimeout(() => menuMobile.classList.add('hidden'), 300);
        iconMenu.classList.remove('hidden');
        iconClose.classList.add('hidden');
        document.body.style.overflow = '';
        if (window.scrollY > 50 && isTransparent) {
            logoContainer.classList.add('logo-blue');
            mobileBtn.classList.add('text-gray-800');
            mobileBtn.classList.remove('text-white');
        } else if (!isTransparent) {
            logoContainer.classList.add('logo-blue');
            mobileBtn.classList.add('text-gray-800');
            mobileBtn.classList.remove('text-white');
        }
    }
  });
</script>