---
// src/components/Footer.astro
import { Image } from "astro:assets";
import CookieBanner from './CookieBanner.astro'; // Importa el componente de banner de cookies
import imgLogo from "../assets/tph-logo-blanco.png";
---

<footer class="bg-blue-600 text-white">
  <!-- ========================================== -->
  <!-- PARTE SUPERIOR (Barra de herramientas) -->
  <!-- ========================================== -->
<div class="border-b border-blue-500/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-12 flex justify-end items-center text-sm font-medium">
    
    <!-- CONTENEDOR DE ICONOS -->
    <div class="flex space-x-5">

