---
// src/pages/contacto.astro
import BaseHead from '../components/BaseHead.astro';
import Navbar from '../components/Navbar.astro';
import ContactoForm from '../components/Contacto.astro';
import PageHeader from '../components/PageHeader.astro';
import Footer from '../components/Footer.astro';

// Assets
import imgFondo from '../assets/pareja-suelo.webp'; 
---

<html lang="es">
  <head>
    <BaseHead 
      title="Contacto | Tu Primer Hogar" 
      description="Estamos aquí para ayudarte. Contacta con nosotros para resolver tus dudas sobre el alquiler con derecho a compra." 
    />
  </head>
  <body class="bg-gray-50">
    
    <!-- 
      MENÚ DE NAVEGACIÓN 
      Lo ponemos transparente para que se fusione con la foto de abajo
    -->
    <Navbar isTransparent={true} />

    <!-- HERO SECTION  -->
    <PageHeader 
        backgroundImage={imgFondo}
        title="Contacto"
        subtitle="Estamos aquí para ayudarte a conseguir tu hogar"
        classes="h-[40vh] min-h-[300px] pt-16"
        overlayClasses="bg-blue-900/60"
    />

    <!-- CONTENIDO PRINCIPAL -->
    <main>
        <!-- Formulario completo -->
        <ContactoForm />
    </main>

    <Footer />

  </body>
</html>