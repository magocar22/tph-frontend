---
// src/pages/contacto.astro
import Layout from "../layouts/Layout.astro";
import ContactoForm from '../components/Contacto.astro';
import PageHeader from '../components/PageHeader.astro';

// Assets
import imgFondo from '../assets/contacto-tph.webp'; 

// SEO Props
const seoTitle = "Contacto | Tu Primer Hogar";
const seoDesc = "Estamos aquí para ayudarte. Contacta con nosotros para resolver tus dudas sobre el alquiler con derecho a compra.";
---

<Layout
  title={seoTitle}
  description={seoDesc}
  navbarTransparent={true}
>
    <!-- HERO SECTION -->
    <PageHeader 
        backgroundImage={imgFondo}
        title="Contacto"
        subtitle="Estamos aquí para ayudarte a conseguir tu hogar"
        classes="h-[40vh] min-h-[300px] pt-16"
        overlayClasses="bg-blue-900/70"
    />

    <!-- CONTENIDO PRINCIPAL -->
    <!-- El Layout ya incluye la etiqueta <main>, así que inyectamos el formulario directamente -->
    <ContactoForm />

</Layout>