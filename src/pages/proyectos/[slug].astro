---
// src/pages/proyectos/[slug].astro
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import ContactoForm from '../../components/Contacto.astro';
import { fetchWP } from '../../lib/wordpress';
import { sanitizeWPHtml, sanitizeWPText } from "../../lib/sanitize";

export const prerender = true;

export async function getStaticPaths() {
    try {
        const proyectos = await fetchWP<any[]>({
            endpoint: 'proyectos',
            params: { per_page: '100', _embed: 'true' }
        });
        return proyectos.map(proyecto => ({
            params: { slug: proyecto.slug }, 
            props: { proyecto }, 
        }));
    } catch (e) { return []; }
}

const { proyecto } = Astro.props;
if (!proyecto) return Astro.redirect('/proyectos');

const acf = proyecto.acf || {};
const tituloProyecto = sanitizeWPText(proyecto.title?.rendered);
const contenidoHtml = sanitizeWPHtml(proyecto.content.rendered);
const imagenCabecera = proyecto._embedded?.['wp:featuredmedia']?.[0]?.source_url || null;

// SEO
const yoast = proyecto.yoast_head_json;
const seoTitle = yoast?.title || tituloProyecto;
const cleanExcerpt = (proyecto.excerpt?.rendered || "").replace(/<[^>]*>?/gm, '').trim(); 
const cleanContent = (proyecto.content?.rendered || "").replace(/<[^>]*>?/gm, '').replace(/\s+/g, ' ').trim();
const buildFallbackDescription = (text: string, max = 160) => {
  if (!text) return "";
  if (text.length <= max) return text;
  const sliced = text.slice(0, max + 1);
  const lastSpace = sliced.lastIndexOf(" ");
  return (lastSpace > 80 ? sliced.slice(0, lastSpace) : sliced.slice(0, max)).trim();
};
const seoDescription = yoast?.description || acf.descripcion_corta || cleanExcerpt || buildFallbackDescription(cleanContent) || "Descubre el proyecto y solicita informacion en Tu Primer Hogar.";
const seoImage = yoast?.og_image?.[0]?.url || imagenCabecera;
---

<Layout
    title={seoTitle}
    description={seoDescription}
    image={seoImage}
    jsonLd={yoast?.schema} 
    navbarTransparent={true}
    showNavbar={false} // Mantener diseño inmersivo sin Navbar
>
    <!-- HEADER / HERO -->
    <header class="relative h-[60vh] min-h-[500px] flex items-end overflow-hidden">
        {imagenCabecera ? (
            <Image 
                src={imagenCabecera} 
                alt={tituloProyecto}
                inferSize={true}
                width={1920}
                height={1080}
                format="webp"
                class="absolute inset-0 w-full h-full object-cover z-0"
                loading="eager"
                fetchpriority="high"
            />
        ) : (
            <div class="absolute inset-0 bg-blue-900 z-0"></div>
        )}
        
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent z-10"></div>
        
        <!-- Botón Volver Manual -->
        <div class="absolute top-12 left-0 w-full px-4 sm:px-6 lg:px-8 z-30">
            <a href="/proyectos" class="inline-flex items-center text-white font-medium bg-black/20 backdrop-blur-md px-4 py-2 rounded-full border border-white/20 hover:bg-black/40 transition-all">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Volver al listado
            </a>
        </div>

        <div class="relative z-20 p-8 md:p-12 max-w-7xl mx-auto w-full">
            <span class="bg-blue-600 text-white px-4 py-1.5 rounded-full text-xs font-bold uppercase mb-4 inline-block shadow-lg">
                {acf.estado || 'En Comercialización'}
            </span>
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-4 drop-shadow-lg">{tituloProyecto}</h1>
            <p class="text-lg text-gray-200 flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                {acf.ubicacion || 'Ubicación Consultar'}
            </p>
        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 py-12 md:py-16 grid grid-cols-1 lg:grid-cols-12 gap-12">
        <div class="lg:col-span-8 space-y-12">
            <div class="bg-white p-6 md:p-10 rounded-3xl shadow-sm border border-gray-100">
                <article class="prose prose-blue prose-lg max-w-none text-gray-600" set:html={contenidoHtml} />
            </div>

            {acf.galeria && acf.galeria.length > 0 && (
                <div>
                    <h3 class="text-2xl font-bold mb-8 text-gray-900 border-l-4 border-blue-600 pl-4">Galería</h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        {acf.galeria.map((img: any) => (
                            <div class="rounded-2xl overflow-hidden shadow-md aspect-video bg-gray-100">
                                <Image src={img.url} alt={img.alt || 'Galería'} inferSize={true} width={800} format="webp" class="w-full h-full object-cover" loading="lazy" />
                            </div>
                        ))}
                    </div>
                </div>
            )}
        </div>

        <aside class="lg:col-span-4">
            <div class="sticky top-28 bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden">
                <div class="bg-blue-600 p-6 text-white">
                    <h3 class="text-xl font-bold">Solicita Información</h3>
                    <p class="text-blue-100 text-sm mt-1">Recibe el dossier detallado.</p>
                </div>
                <div class="p-6">
                    <ContactoForm simple={true} asunto={`Interés en: ${tituloProyecto}`} />
                </div>
            </div>
        </aside>
    </main>
</Layout>
