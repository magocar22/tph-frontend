---
import { Image } from 'astro:assets';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import ContactoForm from '../../components/Contacto.astro';
import { fetchWP } from '../../lib/wordpress';

// 1. SOLUCIÓN AL ERROR (Modo Híbrido)
export const prerender = true;

// 2. GENERAMOS RUTAS ESTÁTICAS
export async function getStaticPaths() {
  const proyectos = await fetchWP<any[]>({
    endpoint: 'proyectos',
    params: { 
        per_page: '100', 
        _embed: 'true' // VITAL: Esto trae la imagen destacada
    }
  });

  return proyectos.map(proyecto => ({
    params: { slug: proyecto.slug }, 
    props: { proyecto }, 
  }));
}

const { proyecto } = Astro.props;

// Protección extra por si acaso
if (!proyecto) {
    return Astro.redirect('/proyectos');
}

// Datos de ACF (Solo texto: ubicación, estado...)
// Usamos un objeto vacío {} por defecto para que no explote si no hay ACF
const acf = proyecto.acf || {};

// 3. LÓGICA DE IMAGEN (SOLO NATIVA DE WORDPRESS)
let imagenUrl = null;

// Buscamos en los datos embebidos de WordPress (_embedded)
if (proyecto._embedded && 
    proyecto._embedded['wp:featuredmedia'] && 
    proyecto._embedded['wp:featuredmedia'][0]) {
    
    imagenUrl = proyecto._embedded['wp:featuredmedia'][0].source_url;
}

// Contenido HTML del editor de bloques
const contenidoHtml = proyecto.content.rendered;
---

<html lang="es">
  <head>
    <BaseHead title={`${proyecto.title.rendered} | Proyecto`} description={acf.descripcion_corta} />
  </head>
  <body class="bg-gray-50 font-sans text-gray-800">
    
    <!-- HEADER -->
    <header class="relative h-[50vh] min-h-[400px] flex items-end">
        {imagenUrl ? (
            <img 
                src={imagenUrl} 
                alt={proyecto.title.rendered} 
                class="absolute inset-0 w-full h-full object-cover" 
            />
        ) : (
            <div class="absolute inset-0 bg-blue-900"></div>
        )}
        
        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
        
        <div class="absolute top-0 w-full p-6 z-20">
             <a href="/proyectos" class="text-white font-bold flex items-center gap-2 hover:underline bg-black/20 px-4 py-2 rounded-full backdrop-blur-md w-fit">
                ← Volver al listado
             </a>
        </div>

        <div class="relative z-10 p-8 md:p-12 max-w-7xl mx-auto w-full">
            <!-- Badge de Estado (Desde ACF) -->
            <span class="bg-blue-600 text-white px-4 py-1 rounded-full text-sm font-bold mb-4 inline-block shadow-lg">
                {acf.estado || 'Consultar'}
            </span>
            
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-2 drop-shadow-md" set:html={proyecto.title.rendered}></h1>
            
            <p class="text-xl text-gray-200 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                {acf.ubicacion || 'Ubicación no disponible'}
            </p>
        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 py-12 grid grid-cols-1 lg:grid-cols-3 gap-12">
        
        <!-- COLUMNA IZQUIERDA: INFORMACIÓN (Desde WordPress) -->
        <div class="lg:col-span-2">
            <div class="bg-white p-8 md:p-10 rounded-3xl shadow-sm border border-gray-100">
                
                <!-- Inyectamos el HTML de WordPress tal cual -->
                <article 
                    class="prose prose-blue prose-lg max-w-none text-gray-600" 
                    set:html={contenidoHtml}
                />

                <!-- GALERÍA ACF (Si decidiste mantenerla aparte) -->
                {acf.galeria && (
                   <div class="mt-12">
                       <h3 class="text-2xl font-bold mb-6">Galería</h3>
                       <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                           {acf.galeria.map((img: any) => (
                               <img src={img.url} alt={img.alt} class="rounded-xl shadow-md hover:scale-105 transition-transform" />
                           ))}
                       </div>
                   </div>
                )}

            </div>
        </div>

        <!-- COLUMNA DERECHA: CONTACTO -->
        <div class="lg:col-span-1">
            <div class="sticky top-8">
                <div class="bg-blue-600 text-white p-6 rounded-t-3xl shadow-lg relative overflow-hidden">
                    <div class="relative z-10">
                        <h3 class="text-xl font-bold">¿Te interesa este proyecto?</h3>
                        <p class="text-blue-100 text-sm mt-1">Solicita el dossier completo.</p>
                    </div>
                    <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"></div>
                </div>
                
                <div class="bg-white p-6 rounded-b-3xl shadow-xl border border-gray-100">
                    <ContactoForm simple={true} />
                </div>
            </div>
        </div>

    </main>

    <Footer />
  </body>
</html>