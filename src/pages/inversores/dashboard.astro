---
import BaseHead from '../../components/BaseHead.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// --- SEGURIDAD ---
const jwt = Astro.cookies.get('jwt')?.value;
if (!jwt) return Astro.redirect('/inversores');

// 1. URL DINÁMICA
const STRAPI_URL = import.meta.env.PUBLIC_STRAPI_URL || "http://127.0.0.1:1337";

// 2. PETICIÓN A LA URL CORRECTA
const response = await fetch(`${STRAPI_URL}/api/users/me?populate[proyectos][populate]=documentos_privados`, {
    headers: { Authorization: `Bearer ${jwt}` }
});

if (!response.ok) return Astro.redirect('/api/logout');

const usuario = await response.json();
let misProyectos = usuario.proyectos || [];

// Filtro de duplicados
misProyectos = Array.from(new Map(misProyectos.map((item: any) => [item.id, item])).values());

// Función de estilos...
const getFileStyle = (ext) => {
    if (!ext) return 'bg-gray-50 text-gray-600';
    if (ext.includes('pdf')) return 'bg-red-50 text-red-600';
    if (ext.includes('xls') || ext.includes('csv')) return 'bg-green-50 text-green-600';
    if (ext.includes('jpg') || ext.includes('png') || ext.includes('zip')) return 'bg-blue-50 text-blue-600';
    return 'bg-gray-50 text-gray-600';
};
---

<html lang="es">
  <head>
    <BaseHead title="Mi Panel | Inversores" description="Panel privado de gestión de inversiones." />
  </head>
  <body class="bg-gray-50 pt-24 font-sans text-gray-800">
    
    <Navbar />

    <main class="max-w-5xl mx-auto px-4 py-12 min-h-[70vh]">
        
        <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-12 gap-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Hola, {usuario.username}</h1>
                <p class="text-gray-500 mt-1">Aquí tienes la documentación actualizada de tus inversiones.</p>
            </div>
            <a href="/api/logout" class="text-sm font-bold text-red-600 hover:bg-red-50 px-4 py-2 rounded-lg transition-colors border border-transparent hover:border-red-100">
                Cerrar Sesión
            </a>
        </div>

        {misProyectos.length === 0 ? (
            <div class="bg-white p-12 rounded-2xl border border-gray-200 text-center shadow-sm">
                <p class="text-gray-500 mb-2">No tienes proyectos asignados actualmente.</p>
                <p class="text-sm text-gray-400">Si crees que es un error, contacta con administración.</p>
            </div>
        ) : (
            <div class="space-y-10">
                {misProyectos.map((proyecto: any) => (
                    
                    <article class="bg-white rounded-3xl shadow-sm border border-gray-200 overflow-hidden transition-shadow hover:shadow-md">
                        
                        <div class="p-6 md:p-8 border-b border-gray-100 bg-white">
                            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                <div>
                                    <span class="text-xs font-bold text-blue-600 uppercase tracking-wider mb-2 block">
                                        Proyecto de Inversión
                                    </span>
                                    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 leading-tight">
                                        {proyecto.titulo}
                                    </h2>
                                    
                                    {proyecto.ubicacion && (
                                        <div class="flex items-center text-gray-500 text-sm mt-3">
                                            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                            {proyecto.ubicacion}
                                        </div>
                                    )}
                                </div>
                                
                                <span class="px-4 py-1.5 bg-gray-100 text-gray-600 rounded-full text-xs font-bold uppercase self-start md:self-center whitespace-nowrap">
                                    {proyecto.estado || 'Activo'}
                                </span>
                            </div>
                        </div>

                        <div class="bg-gray-50/50 p-6 md:p-8">
                            <h3 class="text-sm font-bold text-gray-900 mb-6 flex items-center">
                                Documentación Disponible
                                <span class="ml-2 bg-gray-200 text-gray-600 py-0.5 px-2 rounded text-xs">
                                    {proyecto.documentos_privados?.length || 0}
                                </span>
                            </h3>

                            {proyecto.documentos_privados && proyecto.documentos_privados.length > 0 ? (
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    {proyecto.documentos_privados.map((doc: any) => {
                                        const iconStyle = getFileStyle(doc.ext);
                                        return (
                                            <div class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-xl hover:border-blue-300 transition-colors group h-full">
                                                <div class="flex items-center gap-4 overflow-hidden">
                                                    <div class={`w-10 h-10 flex-shrink-0 flex items-center justify-center rounded-lg ${iconStyle}`}>
                                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                                    </div>
                                                    
                                                    <div class="min-w-0 flex-1">
                                                        <p class="font-bold text-gray-900 text-sm truncate" title={doc.name}>
                                                            {doc.name}
                                                        </p>
                                                        <p class="text-xs text-gray-400 flex items-center mt-0.5">
                                                            {doc.ext?.replace('.', '').toUpperCase()} 
                                                            <span class="mx-1.5">•</span> 
                                                            {Math.round(doc.size)} KB
                                                        </p>
                                                    </div>
                                                </div>

                                                <a 
                                                    href={STRAPI_URL + doc.url} 
                                                    target="_blank"
                                                    rel="noopener noreferrer"
                                                    class="ml-2 p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
                                                    title="Descargar documento"
                                                >
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                                                </a>
                                            </div>
                                        );
                                    })}
                                </div>
                            ) : (
                                <div class="text-center py-10 border-2 border-dashed border-gray-200 rounded-xl bg-gray-50">
                                    <p class="text-gray-400 text-sm">No hay documentos disponibles en este momento.</p>
                                </div>
                            )}
                        </div>

                    </article>
                ))}
            </div>
        )}

    </main>

    <Footer />

  </body>
</html>