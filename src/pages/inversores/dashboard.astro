---
import BaseHead from '../../components/BaseHead.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// 1. SEGURIDAD
const token = Astro.cookies.get('wp_jwt')?.value;
const username = Astro.cookies.get('wp_user_display')?.value || "Inversor";

if (!token) {
  return Astro.redirect('/inversores');
}

// 2. CONEXIÓN A WORDPRESS
const WP_URL = "http://localhost/tph-backend"; // Tu URL local
let misProyectosCompletos = [];

try {
    // A) Pedimos el usuario
    const resUser = await fetch(`${WP_URL}/wp-json/wp/v2/users/me?context=edit`, {
        headers: { 'Authorization': `Bearer ${token}` }
    });

    if (!resUser.ok) throw new Error("Token inválido");

    const user = await resUser.json();
    
    // B) Si el usuario tiene proyectos asignados, pedimos sus detalles completos
    if (user.acf && user.acf.proyectos_asignados && user.acf.proyectos_asignados.length > 0) {
        
        // Obtenemos los IDs
        const ids = user.acf.proyectos_asignados.map((p: any) => p.ID || p).join(',');

        // Pedimos esos proyectos a la API
        const resProyectos = await fetch(`${WP_URL}/wp-json/wp/v2/proyectos?include=${ids}&acf_format=standard&_embed=true`);
        
        if (resProyectos.ok) {
            misProyectosCompletos = await resProyectos.json();
        }
    }

} catch (error) {
    return Astro.redirect('/api/logout'); 
}

// 3. HELPERS VISUALES
const getFileStyle = (mimeType, filename) => {
    if (!mimeType) return 'bg-gray-50 text-gray-600';
    const name = filename ? filename.toLowerCase() : '';
    
    if (mimeType.includes('pdf')) return 'bg-red-50 text-red-600';
    if (mimeType.includes('sheet') || mimeType.includes('excel') || name.endsWith('.csv')) return 'bg-green-50 text-green-600';
    if (mimeType.includes('image')) return 'bg-blue-50 text-blue-600';
    if (name.endsWith('.zip') || name.endsWith('.rar')) return 'bg-yellow-50 text-yellow-600';
    
    return 'bg-gray-50 text-gray-600';
};

const getExtension = (filename) => filename ? filename.split('.').pop().toUpperCase() : 'FILE';
const getSize = (bytes) => bytes ? (bytes > 1000000 ? (bytes/1000000).toFixed(2) + ' MB' : Math.round(bytes/1000) + ' KB') : '-';
---

<html lang="es">
  <head>
    <BaseHead title="Mi Panel | Inversores" description="Panel privado" />
  </head>
  <body class="bg-gray-50 pt-24 font-sans text-gray-800">
    
    <Navbar />

    <main class="max-w-5xl mx-auto px-4 py-12 min-h-[70vh]">
        
        <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-4 border-b border-gray-200 pb-6">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Hola, {username}</h1>
                <p class="text-gray-500 mt-2">Aquí tienes la documentación actualizada de tus inversiones.</p>
            </div>
            <a href="/api/logout" class="px-5 py-2.5 bg-white border border-gray-200 rounded-xl text-red-600 text-sm font-bold hover:bg-red-50 transition-colors shadow-sm">
                Cerrar Sesión
            </a>
        </div>

        {misProyectosCompletos.length === 0 ? (
            <div class="bg-white p-12 rounded-3xl border border-gray-200 text-center">
                <p class="text-gray-500">No tienes proyectos asignados actualmente.</p>
            </div>
        ) : (
            <div class="space-y-10">
                {misProyectosCompletos.map((proyecto: any) => {
                    
                    // EXTRAER DOCUMENTOS
                    const acf = proyecto.acf || {};
                    const docs = [];

                    // --- CORRECCIÓN DE NOMBRES ---
                    // Usamos los nombres que vimos en el JSON: documento_1, documento_2...
                    if (acf.documento_1) docs.push(acf.documento_1);
                    if (acf.documento_2) docs.push(acf.documento_2);
                    if (acf.documento_3) docs.push(acf.documento_3);
                    // -----------------------------

                    // EXTRAER DATOS PÚBLICOS
                    const titulo = proyecto.title.rendered;
                    const ubicacion = acf.ubicacion || '';
                    const estado = acf.estado || 'Activo';
                    const linkFicha = `/proyectos/${proyecto.slug}`;

                    return (
                    <article class="bg-white rounded-3xl shadow-sm border border-gray-200 overflow-hidden transition-all hover:shadow-md">
                        
                        <!-- HEADER PROYECTO -->
                        <div class="p-8 border-b border-gray-100 bg-white">
                            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                <div>
                                    <span class="text-xs font-bold text-blue-600 uppercase tracking-wider mb-2 block">Proyecto Asignado</span>
                                    <h2 class="text-2xl font-bold text-gray-900">{titulo}</h2>
                                    
                                    {ubicacion && (
                                        <p class="text-sm text-gray-500 mt-1 flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                            {ubicacion}
                                        </p>
                                    )}
                                </div>
                                <div class="flex flex-col items-end gap-2">
                                    <span class="px-3 py-1 rounded-full text-xs font-bold bg-gray-100 text-gray-600 uppercase">
                                        {estado}
                                    </span>
                                    <a href={linkFicha} target="_blank" class="text-xs font-bold text-blue-600 hover:underline flex items-center">
                                        Ver ficha pública 
                                        <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <!-- ZONA DE DOCUMENTOS -->
                        <div class="p-8 bg-gray-50/50">
                            <h3 class="text-sm font-bold text-gray-900 mb-6 flex items-center uppercase tracking-wide">
                                <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                Documentación Privada
                            </h3>

                            {docs.length > 0 ? (
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    {docs.map((doc: any) => {
                                        const iconClass = getFileStyle(doc.mime_type, doc.filename);
                                        
                                        return (
                                            <div class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-xl hover:border-blue-400 hover:shadow-md transition-all group">
                                                <div class="flex items-center gap-4 overflow-hidden">
                                                    <div class={`w-12 h-12 flex-shrink-0 flex items-center justify-center rounded-lg ${iconClass} bg-opacity-20`}>
                                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
                                                    </div>
                                                    
                                                    <div class="min-w-0 flex-1">
                                                        <p class="font-bold text-gray-900 text-sm truncate" title={doc.title}>{doc.title}</p>
                                                        <div class="flex items-center text-xs text-gray-400 mt-1">
                                                            <span class="font-semibold uppercase tracking-wider">{getExtension(doc.filename)}</span>
                                                            <span class="mx-2">•</span>
                                                            <span>{getSize(doc.filesize)}</span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <a 
                                                    href={doc.url} 
                                                    target="_blank" 
                                                    class="ml-3 p-2.5 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
                                                    title="Descargar"
                                                >
                                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                                                </a>
                                            </div>
                                        )
                                    })}
                                </div>
                            ) : (
                                <div class="text-center py-8 border-2 border-dashed border-gray-200 rounded-xl bg-white">
                                    <p class="text-gray-400 text-sm">No hay documentos disponibles.</p>
                                </div>
                            )}
                        </div>

                    </article>
                );
                })}
            </div>
        )}

    </main>
    <Footer />
  </body>
</html>