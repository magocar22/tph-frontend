---
import BaseHead from '../../components/BaseHead.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// --- SEGURIDAD ---
const jwt = Astro.cookies.get('jwt')?.value;
if (!jwt) return Astro.redirect('/inversores');

// CONEXIÓN A STRAPI
const response = await fetch("http://127.0.0.1:1337/api/users/me?populate[proyectos][populate]=documentos_privados", {
    headers: { Authorization: `Bearer ${jwt}` }
});

if (!response.ok) return Astro.redirect('/api/logout');

const usuario = await response.json();
const misProyectos = usuario.proyectos || [];
const STRAPI_URL = "http://127.0.0.1:1337";

// Función auxiliar para determinar color del icono según extensión
const getFileStyle = (ext) => {
    if (ext.includes('pdf')) return 'bg-red-50 text-red-600';
    if (ext.includes('xls') || ext.includes('csv')) return 'bg-green-50 text-green-600';
    if (ext.includes('jpg') || ext.includes('png') || ext.includes('zip')) return 'bg-blue-50 text-blue-600';
    return 'bg-gray-50 text-gray-600';
};
---

<html lang="es">
  <head>
    <BaseHead title="Mi Panel | Inversores" description="Panel privado" />
  </head>
  <body class="bg-gray-50 pt-24 font-sans text-gray-800">
    
    <Navbar />

    <main class="max-w-5xl mx-auto px-4 py-12 min-h-[70vh]">
        
        <!-- CABECERA SIMPLE -->
        <div class="flex justify-between items-end mb-12">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Hola, {usuario.username}</h1>
                <p class="text-gray-500 mt-1">Aquí tienes la documentación actualizada de tus inversiones.</p>
            </div>
            <a href="/api/logout" class="text-sm font-bold text-red-600 hover:bg-red-50 px-4 py-2 rounded-lg transition-colors border border-transparent hover:border-red-100">
                Cerrar Sesión
            </a>
        </div>

        <!-- 
           LISTADO DE PROYECTOS
           Si tiene 3 proyectos, saldrán 3 bloques uno debajo de otro.
        -->
        {misProyectos.length === 0 ? (
            <div class="bg-white p-12 rounded-2xl border border-gray-200 text-center">
                <p class="text-gray-500">No tienes proyectos asignados actualmente.</p>
            </div>
        ) : (
            <div class="space-y-10"> <!-- Espacio entre proyectos -->
                
                {misProyectos.map((proyecto: any) => (
                    
                    // TARJETA DE PROYECTO (Estilo limpio)
                    <div class="bg-white rounded-3xl shadow-sm border border-gray-200 overflow-hidden">
                        
                        <!-- 1. TÍTULO DEL PROYECTO (Arriba izquierda) -->
                        <div class="p-8 border-b border-gray-100 bg-white">
                            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                <div>
                                    <span class="text-xs font-bold text-blue-600 uppercase tracking-wider mb-1 block">Proyecto Asignado</span>
                                    <h2 class="text-2xl md:text-3xl font-bold text-gray-900">{proyecto.titulo}</h2>
                                    <div class="flex items-center text-gray-500 text-sm mt-2">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                        {proyecto.ubicacion}
                                    </div>
                                </div>
                                <!-- Estado (Opcional, queda bien) -->
                                <span class="px-4 py-1.5 bg-gray-100 text-gray-600 rounded-full text-xs font-bold uppercase self-start md:self-center">
                                    {proyecto.estado || 'Activo'}
                                </span>
                            </div>
                        </div>

                        <!-- 2. LISTADO DE DOCUMENTOS -->
                        <div class="bg-gray-50/50 p-6 md:p-8">
                            <h3 class="text-sm font-bold text-gray-900 mb-6 flex items-center">
                                Documentación Disponible
                                <span class="ml-2 bg-gray-200 text-gray-600 py-0.5 px-2 rounded text-xs">
                                    {proyecto.documentos_privados?.length || 0} Archivos
                                </span>
                            </h3>

                            {proyecto.documentos_privados && proyecto.documentos_privados.length > 0 ? (
                                <div class="flex flex-col gap-3">
                                    {proyecto.documentos_privados.map((doc: any) => {
                                        // Calculamos estilo según extensión
                                        const iconStyle = getFileStyle(doc.ext);
                                        
                                        return (
                                            <div class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md hover:border-blue-300 transition-all group">
                                                
                                                <!-- Izquierda: Icono + Nombre -->
                                                <div class="flex items-center gap-4 overflow-hidden">
                                                    <!-- Icono de Archivo (Color dinámico) -->
                                                    <div class={`w-12 h-12 flex-shrink-0 flex items-center justify-center rounded-lg ${iconStyle}`}>
                                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                                    </div>
                                                    
                                                    <!-- Info Texto -->
                                                    <div class="min-w-0">
                                                        <p class="font-bold text-gray-900 truncate pr-4">{doc.name}</p>
                                                        <p class="text-xs text-gray-500 flex items-center">
                                                            {doc.ext.replace('.', '').toUpperCase()} 
                                                            <span class="mx-1">•</span> 
                                                            {Math.round(doc.size)} KB
                                                            <span class="mx-1">•</span>
                                                            Actualizado hoy {/* Strapi tiene updatedAt si lo quieres preciso */}
                                                        </p>
                                                    </div>
                                                </div>

                                                <!-- Derecha: Botón Descarga -->
                                                <a 
                                                    href={STRAPI_URL + doc.url} 
                                                    target="_blank"
                                                    class="text-sm font-bold text-blue-600 hover:text-blue-800 whitespace-nowrap px-4 py-2 hover:bg-blue-50 rounded-lg transition-colors"
                                                >
                                                    Descargar
                                                </a>
                                            </div>
                                        );
                                    })}
                                </div>
                            ) : (
                                <div class="text-center py-8 border-2 border-dashed border-gray-200 rounded-xl">
                                    <p class="text-gray-400 text-sm">No hay documentos cargados para este proyecto.</p>
                                </div>
                            )}
                        </div>

                    </div>
                ))}
            </div>
        )}

    </main>

    <Footer />

  </body>
</html>