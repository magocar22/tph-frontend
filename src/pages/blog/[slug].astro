---
import { Image } from 'astro:assets';
import BaseHead from '../../components/BaseHead.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import fetchApi from '../../lib/strapi';

// 1. Usamos el renderizador oficial de Strapi (React)
import { BlocksRenderer } from '@strapi/blocks-react-renderer';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await fetchApi<any[]>({
    endpoint: 'noticias',
    query: { populate: '*' }
  });

  const noticiasValidas = posts.filter(post => post.slug && post.slug !== null);

  return noticiasValidas.map(post => ({
    params: { slug: post.slug }, 
    props: { post }, 
  }));
}

const { post } = Astro.props;
const STRAPI_URL = "http://localhost:1337";
---

<html lang="es">
  <head>
    <BaseHead title={post.titulo} description={post.descripcion} />
  </head>
  <body class="bg-white font-sans text-gray-800">
    
    <div class="pt-20"> 
        <Navbar />
    </div>

    <main class="max-w-4xl mx-auto px-4 py-12">
        
        <!-- ENCABEZADO -->
        <div class="text-center mb-12">
            <span class="text-blue-600 font-bold tracking-widest text-xs uppercase mb-4 block">
                {post.categoria} — {new Date(post.fecha).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
            </span>
            <h1 class="text-3xl md:text-5xl font-bold text-gray-900 leading-tight mb-8">
                {post.titulo}
            </h1>
            
            <div class="rounded-3xl overflow-hidden shadow-xl mb-12 max-h-[500px]">
                {post.imagen ? (
                    <Image 
                        src={STRAPI_URL + post.imagen.url} 
                        alt={post.titulo} 
                        width={1200} 
                        height={600}
                        class="w-full h-full object-cover" 
                    />
                ) : (
                    <div class="w-full h-64 bg-gray-200 flex items-center justify-center text-gray-400">Sin imagen</div>
                )}
            </div>
        </div>

        <!-- 
           CONTENIDO
           Aquí está la clave. 'prose' le da estilo a lo que pinte el BlocksRenderer.
        -->
        <article class="prose prose-blue prose-lg mx-auto text-gray-600">
            <BlocksRenderer content={post.contenido || []} />
        </article>

        <div class="mt-16 pt-8 border-t border-gray-100 text-center">
            <a href="/blog" class="inline-flex items-center text-gray-500 hover:text-blue-600 font-medium transition-colors">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Volver a Actualidad
            </a>
        </div>

    </main>

    <Footer />
  </body>
</html>