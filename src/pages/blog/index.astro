---
import { Image } from 'astro:assets';
import BaseHead from '../../components/BaseHead.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import imgCabecera from '../../assets/fondo-salon.webp';
import PageHeader from '../../components/PageHeader.astro';

// 1. IMPORTAMOS EL FETCH DE WORDPRESS
import { fetchWP } from '../../lib/wordpress';

// 2. PEDIMOS LAS NOTICIAS A WORDPRESS
const wpPosts = await fetchWP<any[]>({
    endpoint: 'posts', 
    params: { 
    per_page: '10', // Traer las últimas 10
    _embed: 'true'  // OBLIGATORIO: Para que traiga imágenes y categorías
    }
});

// 3. MAPEO DE DATOS RECIBIDOS
const posts = wpPosts.map(post => {
    // A. Extraer imagen destacada si existe
    let imagenUrl = null;
    if (post._embedded && post._embedded['wp:featuredmedia'] && post._embedded['wp:featuredmedia'][0]) {
        imagenUrl = post._embedded['wp:featuredmedia'][0].source_url;
    }
    
    // B. Extraer nombre de categoría (la primera que encuentre)
    let nombreCategoria = "Actualidad";
    if (post._embedded && post._embedded['wp:term'] && post._embedded['wp:term'][0] && post._embedded['wp:term'][0][0]) {
        nombreCategoria = post._embedded['wp:term'][0][0].name;
    }

    return {
        slug: post.slug,
        titulo: post.title.rendered,
        descripcion: post.excerpt.rendered.replace(/<[^>]*>?/gm, ''), 
        fecha: new Date(post.date),
        categoria: nombreCategoria,
        imagen: imagenUrl 
    };
});
---

<html lang="es">
<head>
    <BaseHead title="Actualidad | Tu Primer Hogar" description="Novedades corporativas." />
</head>
<body class="bg-gray-50 font-sans text-gray-800">
    
    <Navbar isTransparent={true} />

    <!-- HERO SECTION  -->
    <PageHeader 
        backgroundImage={imgCabecera}
        title="Actualidad"
        subtitle="Te contamos nuestras últimas novedades."
        classes="h-[40vh] min-h-[300px] pt-16"
        overlayClasses="bg-blue-900/70"
    />

    <!-- CONTENIDO PRINCIPAL -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        
        {posts.length === 0 && (
            <div class="text-center py-20 text-gray-500">
                <p>No hay noticias publicadas aún en WordPress.</p>
            </div>
        )}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
            {posts.map((post) => (
                <a href={`/blog/${post.slug}`} class="group block bg-white rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden hover:-translate-y-1">
                    
                    <div class="h-56 overflow-hidden relative">
                        {post.imagen ? (
                            <img 
                                src={post.imagen} 
                                alt={post.titulo} 
                                class="w-full h-full object-cover" 
                            />
                        ) : (
                            <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-400">Sin imagen</div>
                        )}

                        <span class="absolute top-4 left-4 bg-white/90 backdrop-blur text-blue-800 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide shadow-sm">
                            {post.categoria}
                        </span>
                    </div>
                    
                    <div class="p-8">
                        <div class="text-gray-400 text-xs font-bold uppercase tracking-widest mb-3">
                            {post.fecha.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
                        </div>
                        <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors line-clamp-2" set:html={post.titulo}>
                            {/* set:html es necesario porque el título puede tener etiquetas HTML */}
                        </h2>
                        <p class="text-gray-600 line-clamp-3 text-sm leading-relaxed" set:html={post.descripcion}>
                            {/* set:html es necesario porque el extracto puede tener etiquetas HTML */}
                        </p>
                        <div class="mt-6 flex items-center text-blue-600 font-bold text-sm">
                            Leer noticia 
                            <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </main>

    <Footer />
</body>
</html>