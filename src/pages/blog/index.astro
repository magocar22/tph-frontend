---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseHead from '../../components/BaseHead.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import imgCabecera from '../../assets/fondo-salon.jpg'; // Reutilizamos fondo

// Obtener noticias y ordenarlas por fecha (la más nueva primero)
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.fecha.valueOf() - a.data.fecha.valueOf()
);
---

<html lang="es">
  <head>
    <BaseHead title="Actualidad y Noticias | Tu Primer Hogar" description="Novedades, avances de obra y noticias corporativas." />
  </head>
  <body class="bg-gray-50 font-sans text-gray-800">
    
    <Navbar isTransparent={true} />

    <!-- HERO COMPACTO (Igual que Proyectos) -->
    <header class="relative h-[35vh] min-h-[300px] flex flex-col justify-center items-center bg-cover bg-center" style={`background-image: url('${imgCabecera.src}');`}>
        <div class="absolute inset-0 bg-blue-900/70"></div>
        <div class="relative z-10 text-center px-4 pt-16">
            <h1 class="text-4xl md:text-5xl font-bold text-white tracking-wider uppercase drop-shadow-lg">
                Actualidad
            </h1>
            <p class="text-blue-100 text-lg mt-4 max-w-2xl mx-auto font-light">
                El día a día de nuestra compañía y el avance de nuestros proyectos.
            </p>
        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
            {posts.map((post) => (
                <a href={`/blog/${post.slug}`} class="group block bg-white rounded-3xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden hover:-translate-y-1">
                    <!-- Imagen con efecto zoom -->
                    <div class="h-56 overflow-hidden relative">
                        <Image src={post.data.imagen} alt={post.data.titulo} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
                        <!-- Etiqueta categoría -->
                        <span class="absolute top-4 left-4 bg-white/90 backdrop-blur text-blue-800 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">
                            {post.data.categoria}
                        </span>
                    </div>
                    
                    <div class="p-8">
                        <div class="text-gray-400 text-xs font-bold uppercase tracking-widest mb-3">
                            {post.data.fecha.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
                        </div>
                        <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors line-clamp-2">
                            {post.data.titulo}
                        </h2>
                        <p class="text-gray-600 line-clamp-3 text-sm leading-relaxed">
                            {post.data.descripcion}
                        </p>
                        <div class="mt-6 flex items-center text-blue-600 font-bold text-sm">
                            Leer noticia 
                            <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </main>

    <Footer />
  </body>
</html>