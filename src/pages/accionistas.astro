---
// 1. Importaciones unificadas
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/PageHeader.astro";
import NoDisponible from "../components/NoDisponible.astro";
import imgHeader from "../assets/subiendo-escaleras.webp";

// WP e infraestructura
import { fetchWP } from "../lib/wordpress";
import { sanitizeWPText } from "../lib/sanitize";

// 1) Fetch con fallback robusto (Timeout ya incluido en fetchWP)
let todosLosDocs: any[] = [];
let wpAvailable = true;

try {
  todosLosDocs = await fetchWP<any[]>({
    endpoint: "documentos", // Asegúrate de que este es el CPT en WP
    params: {
      per_page: "100",
      acf_format: "standard",
      orderby: "date",
      order: "desc",
    },
  });
} catch (err) {
  console.error("[/accionistas] WP no disponible:", err);
  wpAvailable = false;
}

// 2) Clasificación (solo si WP disponible)
const safeDocs = wpAvailable ? todosLosDocs : [];

const docsGeneral = safeDocs.filter((doc) => doc?.acf?.tipo_documento === "general");
const docsFinanciera = safeDocs.filter((doc) => doc?.acf?.tipo_documento === "financiera");
const hechosRelevantes = safeDocs.filter((doc) => doc?.acf?.tipo_documento === "hecho_relevante");

// Helper visual para etiquetas de archivo
const getFileLabel = (url: string | null | undefined) => {
  if (!url) return "";
  const ext = url.split(".").pop()?.toUpperCase() || "";
  return `${ext} • DESCARGAR`;
};

const safeTitle = (value: string | null | undefined) => sanitizeWPText(value);

// SEO Props
const seoTitle = "Inversores y Accionistas | Tu Primer Hogar";
const seoDesc = "Acceso a información corporativa, estados financieros y hechos relevantes de Tu Primer Hogar.";
---

<Layout
  title={seoTitle}
  description={seoDesc}
  navbarTransparent={true}
>
  <!-- HERO SECTION -->
  <PageHeader
    backgroundImage={imgHeader}
    title="Inversores y Accionistas"
    subtitle="Transparencia y rigor informativo."
    classes="h-[40vh] min-h-[300px] pt-16"
    overlayClasses="bg-blue-900/70"
  />

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    {wpAvailable ? (
      <div class="flex flex-col lg:flex-row gap-12 relative">
        
        <!-- SIDEBAR NAVEGACIÓN (Sticky) -->
        <aside class="lg:w-1/4">
          <nav class="sticky top-28 bg-white rounded-2xl shadow-sm border border-gray-100 p-2 overflow-hidden">
            <ul class="flex flex-col">
              <li>
                <a href="#info-general" class="block px-5 py-3 text-sm font-bold text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-xl transition-colors">
                  Información General
                </a>
              </li>
              <li>
                <a href="#info-financiera" class="block px-5 py-3 text-sm font-bold text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-xl transition-colors">
                  Información Financiera
                </a>
              </li>
              <li>
                <a href="#hechos-relevantes" class="block px-5 py-3 text-sm font-bold text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-xl transition-colors">
                  Hechos Relevantes
                </a>
              </li>
            </ul>
          </nav>
        </aside>

        <!-- CONTENIDO DE DOCUMENTACIÓN -->
        <div class="lg:w-3/4 space-y-20">
          
          <!-- 1. GENERAL -->
          <section id="info-general" class="scroll-mt-28">
            <h2 class="text-2xl font-bold text-blue-600 mb-8 border-b border-gray-200 pb-4">
              Información General
            </h2>
            <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden mb-10 shadow-sm">
              {docsGeneral.map((doc) => (
                <div class="flex items-center justify-between p-5 border-b border-gray-100 last:border-0 hover:bg-gray-50 transition-colors gap-4">
                  <div class="flex items-center gap-4 overflow-hidden">
                    <div class="bg-blue-50 p-2.5 rounded-xl text-blue-600 shrink-0">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                    </div>
                    <div class="min-w-0">
                      <p class="font-bold text-gray-900 truncate">{safeTitle(doc?.title?.rendered)}</p>
                      {doc?.acf?.subtitulo && (
                        <p class="text-xs text-gray-500 uppercase">{doc.acf.subtitulo}</p>
                      )}
                    </div>
                  </div>

                  {doc?.acf?.archivo && (
                    <a href={doc.acf.archivo} target="_blank" rel="noopener noreferrer" class="shrink-0 bg-blue-50 text-blue-700 px-4 py-2 rounded-xl text-sm font-bold hover:bg-blue-100 transition-colors flex items-center justify-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                      <span class="hidden sm:inline">Ver Documento</span>
                      <span class="sm:hidden">Ver</span>
                    </a>
                  )}
                </div>
              ))}
              {!docsGeneral.length && <p class="p-6 text-gray-500 italic text-sm">No hay documentos disponibles.</p>}
            </div>
          </section>

          <!-- 2. FINANCIERA -->
          <section id="info-financiera" class="scroll-mt-28">
            <h2 class="text-2xl font-bold text-blue-600 mb-8 border-b border-gray-200 pb-4">
              Información Financiera
            </h2>
            <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden mb-10 shadow-sm">
              {docsFinanciera.map((doc) => (
                <div class="flex items-center justify-between p-5 border-b border-gray-100 last:border-0 hover:bg-gray-50 transition-colors gap-4">
                  <div class="flex items-center gap-4 overflow-hidden">
                    <div class="bg-green-50 p-2.5 rounded-xl text-green-600 shrink-0">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>
                    </div>
                    <div class="min-w-0">
                      <p class="font-bold text-gray-900 truncate">{safeTitle(doc?.title?.rendered)}</p>
                      <p class="text-xs text-gray-500 uppercase">
                        {doc?.acf?.subtitulo && <span class="font-semibold text-gray-600">{doc.acf.subtitulo} • </span>}
                        {getFileLabel(doc?.acf?.archivo)}
                      </p>
                    </div>
                  </div>
                  {doc?.acf?.archivo && (
                    <a href={doc.acf.archivo} target="_blank" rel="noopener noreferrer" class="shrink-0 bg-blue-50 text-blue-700 px-4 py-2 rounded-xl text-sm font-bold hover:bg-blue-100 transition-colors flex items-center justify-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                      <span class="hidden sm:inline">Ver Documento</span>
                    </a>
                  )}
                </div>
              ))}
              {!docsFinanciera.length && <p class="p-6 text-gray-500 italic text-sm">No hay información financiera disponible.</p>}
            </div>
          </section>

          <!-- 3. HECHOS RELEVANTES -->
          <section id="hechos-relevantes" class="scroll-mt-28">
            <h2 class="text-2xl font-bold text-blue-600 mb-8 border-b border-gray-200 pb-4">
              Hechos Relevantes
            </h2>
            <div class="space-y-4">
              {hechosRelevantes.map((hr) => (
                <div class="bg-white p-6 rounded-2xl border border-gray-200 flex flex-col sm:flex-row sm:items-center justify-between gap-4 hover:border-blue-300 hover:shadow-sm transition-all">
                  <div>
                    <div class="flex items-center gap-3 mb-1">
                      <span class="bg-gray-100 text-gray-600 text-xs font-bold px-2 py-1 rounded border border-gray-200">HR</span>
                      <span class="text-sm text-gray-500 font-medium">
                        {new Date(hr.date).toLocaleDateString("es-ES", { day: "numeric", month: "long", year: "numeric" })}
                      </span>
                    </div>
                    <h3 class="text-lg font-bold text-gray-900">{safeTitle(hr?.title?.rendered)}</h3>
                  </div>
                  {hr?.acf?.archivo && (
                    <a href={hr.acf.archivo} target="_blank" rel="noopener noreferrer" class="shrink-0 bg-blue-50 text-blue-700 px-4 py-2 rounded-xl text-sm font-bold hover:bg-blue-100 transition-colors flex items-center justify-center gap-2 w-full sm:w-auto">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                      <span class="inline">Ver Documento</span>
                    </a>
                  )}
                </div>
              ))}
              {!hechosRelevantes.length && (
                <div class="text-center py-10 border-2 border-dashed border-gray-200 rounded-2xl">
                  <p class="text-gray-400">No hay hechos relevantes publicados.</p>
                </div>
              )}
            </div>
          </section>
        </div>
      </div>
    ) : (
      <NoDisponible 
        title="Información no disponible"
        message="En este momento no podemos cargar la información de accionistas. Estamos trabajando para restablecer el servicio."
      />
    )}
  </main>
</Layout>
